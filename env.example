# OnTrack Assistant - Environment Variables
# Copia este archivo como .env y configura las variables

# Base de datos
DATABASE_URL="postgresql://ontrack_user:tu_password@localhost:5432/ontrack_db"

# JWT
JWT_SECRET="tu_jwt_secret_muy_seguro_aqui"
JWT_EXPIRES_IN="7d"

# CORS
CORS_ORIGIN="https://assistant.ontrack.global"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX_REQUESTS="1000"

# Puerto del servidor
PORT="3001"

# Entorno
NODE_ENV="production"

# Configuración de archivos
MAX_FILE_SIZE="10485760"  # 10MB en bytes
UPLOAD_DIR="uploads"

# Configuración de backup
BACKUP_RETENTION_DAYS="30"
BACKUP_DIR="/var/www/ontrack/backups"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="tu_access_key_id_aqui"
AWS_SECRET_ACCESS_KEY="tu_secret_access_key_aqui"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="tu_bucket_name_aqui"
S3_DOCUMENTS_PREFIX="documents/"