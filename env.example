# OnTrack Assistant - Environment Variables
# Copia este archivo como .env y configura las variables

# Base de datos
DATABASE_URL="postgresql://ontrack_user:tu_password@localhost:5432/ontrack_db"

# JWT
JWT_SECRET="tu_jwt_secret_muy_seguro_aqui"
JWT_EXPIRES_IN="7d"

# CORS
CORS_ORIGIN="https://assistant.ontrack.global"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX_REQUESTS="1000"

# Puerto del servidor
PORT="3001"

# Entorno
NODE_ENV="production"

# Configuración de archivos
MAX_FILE_SIZE="10485760"  # 10MB en bytes
UPLOAD_DIR="uploads"

# Configuración de backup
BACKUP_RETENTION_DAYS="30"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="tu_aws_access_key"
AWS_SECRET_ACCESS_KEY="tu_aws_secret_key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="tu_bucket_name"
S3_DOCUMENTS_PREFIX="documents/"

# OpenAI API Configuration (para embeddings y RAG)
OPENAI_API_KEY="sk-proj-..." # Tu API key de OpenAI
OPENAI_EMBEDDING_MODEL="text-embedding-3-small" # Modelo recomendado (1536 dims, $0.02/1M tokens)
OPENAI_MAX_TOKENS="8191" # Límite de tokens por request

# Straico API Configuration
STRAICO_API_KEY="tu_straico_api_key"